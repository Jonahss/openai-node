{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": true,
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "./dist",
    "moduleResolution": "node",
    "declaration": true,
    "baseUrl": ".",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./**/*",
  ]
}